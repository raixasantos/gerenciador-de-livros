<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/ic_livro"
                android:src="@drawable/ic_book"
                android:contentDescription="Blue Book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />
            <TextView
                android:id="@+id/txtTitulo"
                android:text="TÃ­tulo do Livro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_livro"
                android:layout_alignParentTop="true"
                />
            <ImageView
                android:id="@+id/ic_star"
                android:src="@drawable/ic_star"
                android:contentDescription="Orange Star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtTitulo"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/txtAutor"
                android:text="Autor do Livro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_livro"
                android:layout_below="@+id/txtTitulo"
                />
            <TextView
                android:id="@+id/txtEditora"
                android:text="Editora do Livro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_livro"
                android:layout_below="@+id/txtAutor"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>